{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SignupRequest",
  "type": "object",
  "required": ["username", "password"],
  "properties": {
    "username": { "type": "string", "minLength": 1 },
    "password": { "type": "string", "minLength": 6 },
    "email": { "type": "string", "format": "email" }
  },
  "additionalProperties": false
}
