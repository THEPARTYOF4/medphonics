{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChatRequest",
  "type": "object",
  "required": ["prompt"],
  "properties": {
    "prompt": { "type": "string", "minLength": 1 },
    "file": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "content": { "type": "string" },
        "type": { "type": "string" }
      },
      "additionalProperties": false
    },
    "metadata": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": false
}
