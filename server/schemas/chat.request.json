{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChatRequest",
  "type": "object",
  "required": ["prompt"],
  "properties": {
    "prompt": { 
      "type": "string", 
      "minLength": 1,
      "description": "The user's input query or message"
    },
    "file": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "content": { "type": "string" },
        "type": { "type": "string" }
      },
      "additionalProperties": false,
      "description": "Optional file attachment for context"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["medical", "general"],
          "description": "Query type - 'medical' enables glossary features"
        },
        "searchGlossary": {
          "type": "boolean",
          "description": "Whether to search existing glossary entries"
        },
        "updateGlossary": {
          "type": "boolean",
          "description": "Whether to extract and add new terms to glossary"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
